:javascript
  window.available_payments = #{@experiments_options}

-content_for :page_title do
  #instruction
    =t "final_instruction"
.experiments
  -@experiments_options.each_with_index do |experiment, index|
    .experiment{id: "experiment-#{experiment.to_s}"}
      .col-md-4
        .panel.panel-default
          .panel-body
            %h4.experiment_title
              =t "payment", index: index + 1
            %p.lead=t "options.#{@selected_option_name}.payment_method.#{experiment}"
            %button.begin.btn.btn-success{value: "#{experiment}"}
              Begin
