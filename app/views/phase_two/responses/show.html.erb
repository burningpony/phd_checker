<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", responses_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_response_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", response_path(@response) %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.response.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</b>
          <%= @response.user_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.response.error", :default => t("activerecord.labels.error", :default => "Error")) %>:</b>
          <%= @response.error %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.response.essay", :default => t("activerecord.labels.essay", :default => "Essay")) %>:</b>
          <%= @response.essay %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.response.correct", :default => t("activerecord.labels.correct", :default => "Correct")) %>:</b>
          <%= @response.correct %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.response.corrected", :default => t("activerecord.labels.corrected", :default => "Corrected")) %>:</b>
          <%= @response.corrected %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.response.uncorrected", :default => t("activerecord.labels.uncorrected", :default => "Uncorrected")) %>:</b>
          <%= @response.uncorrected %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_response_path(@response), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), response_path(@response), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>